{
  "manifest_version": 3,
  "name": "Marketplace Search - Second Hand Deals Finder",
  "version": "1.0.0",
  "description": "Search across multiple second-hand marketplaces to find the best deals on items you're looking for.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["sidePanel", "storage", "tabs"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": [
        "https://www.facebook.com/marketplace/*",
        "https://www.craigslist.org/*",
        "https://*.craigslist.org/*",
        "https://www.ebay.com/*",
        "https://www.ebay.co.uk/*",
        "https://www.ebay.ca/*",
        "https://www.etsy.com/*",
        "https://www.gumtree.com/*",
        "https://www.olx.pl/*",
        "https://www.olx.pt/*",
        "https://www.olx.ro/*"
      ],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tutorial/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
